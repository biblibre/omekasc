#!/usr/bin/env php
<?php

require dirname(__DIR__) . '/vendor/autoload.php';

use Symfony\Component\Console\Application;
use Omeka\Console\Command;
use Omeka\Console\Helper\OmekaHelper;

$application = new Application('Omeka S CLI', '0.4.0');

$helperSet = $application->getHelperSet();
$helperSet->set(new OmekaHelper());

$application->add(new Command\DbMigrateCommand());

$application->add(new Command\ModuleActivateCommand());
$application->add(new Command\ModuleDeactivateCommand());
$application->add(new Command\ModuleInstallCommand());
$application->add(new Command\ModuleUninstallCommand());
$application->add(new Command\ModuleUpgradeCommand());

$application->add(new Command\ScaffoldModuleCommand());

$application->add(new Command\SettingsGetCommand());
$application->add(new Command\SettingsSetCommand());

$application->add(new Command\UserSetPasswordCommand());

$application->run();
